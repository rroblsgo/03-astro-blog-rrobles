---
const { frontmatter, url, ...rest } = Astro.props;
// console.log('ðŸš€ ~ frontmatter:', frontmatter);
// console.log('ðŸš€ ~ url:', url);
import { Formatter } from '@/utils/formatter.ts';
---

<div class="lg:flex">
  <img
    class="object-cover w-full h-56 rounded-lg lg:w-64"
    src={frontmatter.image}
    alt=""
  />

  <div class="flex flex-col justify-between py-6 lg:mx-6">
    <a href={url} class="text-xl font-semibold hover:underline text-white">
      {frontmatter.title}
    </a>
    <p>{frontmatter.description}</p>

    <span class="text-sm text-gray-300"
      >{Formatter.formatDate(frontmatter.date)}</span
    >
  </div>
</div>
