---
import MainLayout from '@/layouts/MainLayout.astro';
import { siteConfig } from '@/config/site-config.ts';
import BlogPost from '@/components/BlogPost.astro';

const posts = Object.values(
  import.meta.glob('@/pages/posts/*.{mdx,md}', { eager: true }) as Record<
    string,
    { url: string; frontmatter: { title: string } }
  >
);
---

<MainLayout title="Astro Blog | Home">
  <section class="bg-gray-900">
    <div class="container px-6 py-10 mx-auto">
      <h1 class="text-3xl font-semibold capitalize lg:text-4xl text-white">
        {siteConfig.title}
      </h1>

      <div
        class="grid grid-cols-1 gap-8 mt-8 md:mt-16 md:grid-cols-2 text-white"
      >
        {posts.map((post) => <BlogPost {...post} />)}
      </div>
    </div>
  </section>
</MainLayout>
